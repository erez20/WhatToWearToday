<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/checklist_clothing_row_bg">

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textColor="#7b1fa2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sun"
            android:textSize="30sp"
            android:id="@+id/day_tv"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/snow"
            android:id="@+id/weather_iv"
            android:contentDescription="@string/weather_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-10Â°"
            android:textSize="20sp"
            android:id="@+id/temp_tv"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Here's how you dress your kids:"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <CheckBox
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/boots"
                android:layout_margin="10dp"/>
            <CheckBox
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:button="@null"
                android:background="@drawable/coat_unchecked"
                android:layout_margin="10dp"/>
            <CheckBox
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:button="@null"
                android:background="@drawable/hat_checked"
                android:layout_margin="10dp"/>
            <CheckBox
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:button="@null"
                android:background="@drawable/scarf_unchecked"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>