<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="20dp">



    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/day_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sun"
            android:textColor="#7b1fa2"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/weather_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/weather_image"
            android:src="@drawable/snow" />

        <TextView
            android:id="@+id/temp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-10Â°"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Here's how you dress your kids:"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/bootsID"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/boots"
                android:button="@null"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/coatID"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/coat_unchecked"
                android:button="@null"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/hatID"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/hat_checked"
                android:button="@null"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/scarfID"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/scarf_unchecked"
                android:button="@null"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>