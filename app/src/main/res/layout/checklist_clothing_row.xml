<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp"
        app:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:baselineAligned="true"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/day_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sun"
                    android:textColor="#7b1fa2"
                    android:textSize="30sp"
                    android:fontFamily="Roboto-Light"
                    />

                <ImageView
                    android:id="@+id/weather_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/weather_image"
                     />

                <TextView
                    android:id="@+id/temp_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-10Â°"
                    android:textSize="20sp"
                    android:fontFamily="Roboto-Light"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/bootsID"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/boots_checkbox"
                        android:button="@null"
                        android:visibility="visible" />

                    <CheckBox
                        android:id="@+id/coatID"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/coat_checkbox"
                        android:button="@null"
                        android:visibility="gone" />

                    <CheckBox
                        android:id="@+id/hatID"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/hat_checkbox"
                        android:button="@null"
                        android:visibility="gone" />

                    <CheckBox
                        android:id="@+id/scarfID"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/scarf_checkbox"
                        android:button="@null"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>